# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /mytest                     controllers.Application.mytest

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# version
GET     /version                    controllers.VersionController.version

# movie
GET     /movie/list                 controllers.MovieController.list

GET 	/user/connected				controllers.myController.listConnectedUsers(uid: Option[String])

# use Cypher
POST	/share/photos				controllers.ShareController.sharePhotos(shareType: Option[Int], pids: String, recipients: String)
GET		/share/photos				controllers.ShareController.getSharePhotos(shareid: String)
POST	/share/photos/accept		controllers.ShareController.sharePhotosAccept(shareid: String)
